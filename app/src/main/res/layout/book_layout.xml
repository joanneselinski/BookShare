<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="@color/colorPrimaryLight"
        >

    <LinearLayout
        android:layout_height="@dimen/card_height"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/card_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/card_text" />

    <TextView
        android:id="@+id/detail"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:textSize="18sp"
        android:layout_weight="4"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">
    </TextView>

    <!-- putting this here makes the card not clickable for short or long actions
             <ToggleButton
                 android:layout_width="@dimen/card_height"
                 android:layout_height="@dimen/card_height"
                 android:layout_weight="1"
                 android:textOn="@string/avail"
                 android:textOff="@string/unavail"
                 android:checked="true">
             </ToggleButton>
        -->
         </LinearLayout>
         </androidx.cardview.widget.CardView>




</LinearLayout>